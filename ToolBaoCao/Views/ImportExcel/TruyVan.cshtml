@{
    if (Request.getValue("layout") == "null")
    {
        Layout = null;
    }
}
<div class="alert alert-info">Từ ngày @Request.getValue("ngay1") đến @Request.getValue("ngay2")</div>
@if (ViewBag.Error != null)
{
    <div class="alert alert-warning">
        @Html.Raw(ViewBag.Error)
    </div>
}
<div class="alert alert-info">
    <fieldset>
        <legend>B02. Thống kê KCB (tháng)</legend>
        <div>
            @if (ViewBag.b02 != null)
            {
                DataTable data = ViewBag.b02 as DataTable;
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            @foreach (DataColumn c in data.Columns)
                            {
                                <th>@c.ColumnName</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in data.Rows)
                        {
                            <tr>
                                @for (int i = 0; i < data.Columns.Count; i++)
                                {
                                    <td>@row[i]</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </fieldset>
</div>

