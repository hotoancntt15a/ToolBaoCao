@{
    Layout = null;
    if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">
            @Html.Raw(ViewBag.Error)
        </div>
    }
    if (ViewBag.dataTable != null)
    {
        System.Data.DataTable data = ViewBag.dataTable as System.Data.DataTable;
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn c in data.Columns)
                    {
                        <th>@c.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in data.Rows)
                {
                    <tr>
                        @for (int i = 0; i < data.Columns.Count; i++)
                        {
                            <td>@row[i]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    if (ViewBag.data != null)
    {
        var msg = $"{ViewBag.data}";
        if (msg == "") { msg = $"Thao tác thành công vào lúc {DateTime.Now:yyyy-MM-d H:m:s}"; }
        <div class="alert alert-info"> @msg</div>
    }
    if (ViewBag.History != null)
    {
        var msg = $"{ViewBag.History}";
        @Html.Raw(msg);
    }
}