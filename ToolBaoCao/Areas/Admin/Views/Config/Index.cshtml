@{
    ViewBag.Title = "Cấu hình hệ thống";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading"> </div>
            <div class="panel-body">
                <p>
                    <a href="javascript:AddNew();" class="btn btn-primary btn-sm"> <i class="fa fa-plus"></i> Thêm mới </a>
                    <a href="@Url.Action("variables")" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i> Xem Biến cố định</a>
                    <a href="#" onclick="window.location.reload()" class="btn btn-primary btn-sm"><i class="fa fa-refresh"></i> Làm mới</a>
                </p>
                <table class="table table-hover table-bordered">
                    <thead><tr><th style="width: 200px;">Key</th><th>Value</th></tr></thead>
                    <tbody>
                        @foreach (var v in AppHelper.appConfig.Config.Settings)
                        {
                            <tr> <td><a href="#" onclick="editconfig(this);">@v.Key</a></td><td>@v.Value</td> </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<form method="post" action="@Url.Action("save")" id="frmAddConfig">
    <input type="hidden" id="cmd" name="cmd" value="0" />
    <div class="modal fade" id="myform" role="dialog">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Cập nhật</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Key</label>
                        @Html.TextBox("key", "", new { id = "key", @class = "form-control", placeholder = "viết liền không dấu" })
                    </div>
                    <div class="form-group">
                        <label>Value</label>
                        @Html.TextBox("value", "", new { id = "value", @class = "form-control", placeholder = "giá trị của từ khóa" })
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-primary btn-sm" href="#" onclick="postform('frmAddConfig');"> <i class="fa fa-save"></i> Lưu lại </a>
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal"> <i class="fa fa-remove"></i> Hủy </button>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts {
    <script>
        function editconfig(e) {
            $('#key').val($(e).text());
            $('#value').val($(e).closest('tr').find('td').eq(1).text());
            $('#myform').modal("show");
        }
        function AddNew() { $('#cmd').val('0'); $('#key').val(''); $('#value').val(''); $('#myform').modal("show"); $('#key').focus(); }
    </script>
}