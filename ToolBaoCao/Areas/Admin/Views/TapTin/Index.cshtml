@{
    ViewBag.Title = "Quản lý tập tin";
    var idform = $"frmviewfile";
}
<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h2 id="title" class="apptitle">@ViewBag.Title</h2>
    </section>
    <div class="row">
        <div class="col-12">
            <form id="@idform" method="post" action="@Url.Action("views", "TapTin", new { area = "Admin" })">
                <input type="hidden" name="layout" value="null" />
                <input type="hidden" name="path" value="@ViewBag.path" />
                <table class="table table-hover table-sm">
                    <tbody>
                        <tr><td>Từ khoá <input type="text" name="key" value="@ViewBag.key" /></td></tr>
                        <tr><td><button type="button" class="btn btn-primary btn-sm" onclick="postform('@idform', '', 'viewfiles')"> <i class="fa fa-search"></i> Tìm</button></td></tr>
                    </tbody>
                </table>
            </form>
        </div>
        <div class="col-12" id="viewfiles">
        </div>
    </div>
</main>
<script>
    $(document).ready(function () { showgeturl('@Url.Action("views", "TapTin", new { area ="Admin", layout="null" })&idtarget=viewfiles', 'viewfiles'); });
</script>