@{
    ViewBag.Title = "Quản lý tập tin";
    var idfrom = $"frmfiles{DateTime.Now.toTimestamp()}";
}
<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h2 id="title" class="apptitle">@ViewBag.Title</h2>
    </section>
    <div class="row">
        <div class="col-12">
            <form method="post" id="@idfrom">
                <input type="hidden" name="p" id="path" value="" />
                <fieldset class="border p-2">
                    <legend class="w-auto">Tìm kiếm</legend>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-append"><div class="input-group-text">Từ khoá: </div></div>
                            <input type="text" name="key" value="" class="form-control" maxlength="255" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <button type="button" class="btn btn-primary" onclick="timkiem();"> <i class="fa fa-play"></i> Thực hiện </button>
                        </div>
                    </div>
                </fieldset>
            </form>
            <form method="post" id="frmviewfile"> </form>
            <div id="viewfiles"></div>
        </div>
    </div>
</main>
<script>
        function timkiem() {
            var val = '';
            if ($('#viewfile').find('input').length > 0) { val = $('#viewfiles').find('input').first().val(); }
            $('#path').val(val);
            postform('@idfrom', '@Url.Action("views", "TapTin", new { area="Admin" })', '#viewfiles');
        }
    function viewfolders(url) { postform('#frmviewfile', url, '#viewfiles'); }
</script>